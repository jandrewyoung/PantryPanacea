<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pantrypanacea"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.pantrypanacea.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        android:name="EnterIngredientsActivity"
        android:label="Enter an Ingredient"
        android:parentActivityName="pantrypanacea.MainActivity.java">
        </activity>
        <activity
        android:name="SearchRecipeActivity"
        android:label="Search for a Recipe"
        android:parentActivityName="pantrypanacea.MainActivity.java">
        </activity>
        <activity
        android:name="ViewIngredientsActivity"
        android:label="View and Edit Your Ingredients"
        android:parentActivityName="pantrypanacea.MainActivity.java">
        </activity>
        <activity
        android:name="ViewRecipeActivity"
        android:label="Your Current Recipe"
        android:parentActivityName="pantrypanacea.MainActivity.java">
        </activity>
        <activity
        android:name="ViewRecipeList"
        android:label="Select a Recipe"
        android:parentActivityName="pantrypanacea.MainActivity.java">
        </activity>
        <activity
        android:name="ViewPrevActivity"
        android:label="View Previously Used Recipes"
        android:parentActivityName="pantrypanacea.MainActivity.java">
        </activity>
        <activity
        android:name="PrevRecipe"
        android:label="View Previously Used Recipes"
        android:parentActivityName="pantrypanacea.MainActivity.java">
        </activity>
        </application>

</manifest>
